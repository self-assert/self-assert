{
  "name": "self-assert",
  "version": "0.7.1",
  "description": "Provides a structured approach to a bussiness model creation and validation.",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "files": [
    "dist"
  ],
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rollup -c",
    "check:examples": "npx tsc -p examples/tsconfig.examples.json --noEmit",
    "check:all": "npx tsc --noEmit && npm run lint && npm run test && npm run check:examples",
    "docs": "typedoc",
    "lint": "eslint src",
    "prepare": "npm run build",
    "test": "jest"
  },
  "keywords": [
    "validation",
    "form",
    "assert"
  ],
  "contributors": [
    {
      "name": "Hernán Wilkinson",
      "url": "https://github.com/hernanwilkinson"
    },
    {
      "name": "Tomás Ossa",
      "url": "https://github.com/tomasossa"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/self-assert/self-assert.git"
  },
  "bugs": {
    "url": "https://github.com/self-assert/self-assert/issues"
  },
  "homepage": "https://self-assert.github.io/self-assert",
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.27.0",
    "@eslint/js": "^9.24.0",
    "@jest/globals": "^29.7.0",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "babel-jest": "^29.7.0",
    "eslint": "^9.24.0",
    "jest": "^29.7.0",
    "rollup": "^4.39.0",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.2",
    "typedoc-github-theme": "^0.3.0",
    "typedoc-plugin-markdown": "^4.6.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1"
  }
}
