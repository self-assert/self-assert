{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "isolatedModules": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "noEmit": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "paths": {
      "@testing-support/*": ["./testing-support/*"]
    }
  },
  "include": ["./src", "testing-support"]
}
