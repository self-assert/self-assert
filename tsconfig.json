{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES6",
    "isolatedModules": true,
    "moduleResolution": "node",
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": ["./src", "./tests-setup"]
}
