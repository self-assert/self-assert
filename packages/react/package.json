{
  "name": "@self-assert/react",
  "version": "0.3.1",
  "description": "A React extension for the self-assert library.",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs.js"
  },
  "files": [
    "dist"
  ],
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/self-assert/self-assert.git",
    "directory": "packages/react"
  },
  "bugs": {
    "url": "https://github.com/self-assert/self-assert/issues"
  },
  "homepage": "https://self-assert.github.io",
  "scripts": {
    "build": "rm -rf dist && rollup -c",
    "check:types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "jest"
  },
  "keywords": [
    "form",
    "forms",
    "react",
    "react-dom",
    "hooks",
    "react hooks",
    "validation",
    "self-assert"
  ],
  "peerDependencies": {
    "react": ">=18.0.0 <20.0.0",
    "react-dom": ">=18.0.0 <20.0.0",
    "self-assert": "^1.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "jest-environment-jsdom": "^30.1.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rollup": "^4.52.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "self-assert": "*"
  }
}
